<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
Budgets
-->
	 <record model="ir.ui.view" id="view_res_company_consolidated_form">
         <field name="name">res.company.consolidated</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        
        <field name="arch" type="xml">
        <xpath  expr="//group[@name='social_media']"  position="after">
        		<group string="Consolidated">
        			<field name="company_hash" />
        			
        		</group>
        </xpath>
     	</field>
    </record>
	
	 <record id="view_consolidated_instance_tree" model="ir.ui.view">
        <field name="name">consolidated.instance.tree</field>
        <field name="model">consolidated.instance</field>
        <field name="arch" type="xml">
            <tree string="Instance">
                <field name="name"/>
                <field name="type"/>
            </tree>
        </field>
    </record>
    
    <record id="view_consolidated_instance_form" model="ir.ui.view">
        <field name="name">consolidated.instance.form</field>
        <field name="model">consolidated.instance</field>
        <field name="arch" type="xml">
            <form string="Instance">
            <sheet>
            		<header>
            			<button name="test_connection" type="object" string="Test Connection" />
            			
            		</header>
	            	<group>
		                <field name="type"/>
		                <field name="name"/>
		                <field name="company_id"/>
	               </group> 
	               <group attrs="{'invisible':[('type','=','internal')]}">
	               
	               	 <field name="company_hash"/>
		                <field name="url"/>
		                <field name="username"/>
		                <field name="password" password="True"/>
		                <field name="database"/>
	               </group>
	               
	               
               </sheet>
            </form>
        </field>
    </record>

    <record id="open_instance_form" model="ir.actions.act_window">
        <field name="name">Instance</field>
        <field name="res_model">consolidated.instance</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_consolidated_instance_tree"/>
    </record>
	
	<menuitem
        id="consolidated_menu_root"
        name="Consolidated"
        web_icon="syd_consolidated_base,static/description/icon.png"
        sequence="101"/>
	
   <menuitem
      	id="consolidated_menu_configuration"
        parent="consolidated_menu_root"
        name="Configuration"
        sequence="102"/>   
        
        
     <menuitem
      	id="consolidated_menu_instances"
        parent="consolidated_menu_configuration"
        name="Instances"
        action="open_instance_form"
        sequence="102" groups="base.group_system" />   
       
        
     

   
</odoo> 
